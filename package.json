{
  "name": "jabber_v3",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev:web": "pnpm --filter ./apps/web... dev",
    "build:web": "pnpm --filter ./apps/web... build",
    "dev:api": "pnpm --filter ./apps/api... dev",
    "migrate:up": "goose -dir apps/api/db/migrations postgres \"$DATABASE_URL\" up",
    "install:all": "pnpm install && cd apps/api && go mod download"
  }
}
